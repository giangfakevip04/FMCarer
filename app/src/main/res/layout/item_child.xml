<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/satisfied_filled"
        android:background="@drawable/bg_circle"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bé Ngọc Lan"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textChildDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: 12/04/2020"
            android:textSize="12sp"
            android:textColor="#666666" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iconEdit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/edit"
        android:contentDescription="Sửa"
        android:layout_marginEnd="16dp"
        app:tint="#00B89F" />

    <ImageView
        android:id="@+id/iconDelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/delete"
        android:contentDescription="Xoá"
        app:tint="#FF5252" />

</LinearLayout>
