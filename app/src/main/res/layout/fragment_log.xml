<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textTitleLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhật ký chăm sóc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textTitleLogs"
        android:padding="16dp"
        android:clipToPadding="false"
        android:layout_above="@id/fabAddLog" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/add"
        android:tint="@android:color/white"
        android:backgroundTint="#00B89F" />

    <!-- Thanh điều hướng -->
    <include
        layout="@layout/view_bottom_nav"
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
