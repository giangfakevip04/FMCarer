<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Logo ứng dụng"
            android:src="@drawable/ic_logo" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Đăng ký"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Email"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_outline"
            android:drawableStart="@drawable/email"
            android:hint="Nhập email"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Mật khẩu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mật khẩu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_outline"
            android:drawableStart="@drawable/lock"
            android:drawableEnd="@drawable/eye"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Xác nhận mật khẩu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Xác nhận mật khẩu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_error"
            android:drawableStart="@drawable/key"
            android:drawableEnd="@drawable/eye"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:padding="12dp" />
        <!-- highlight đỏ nếu sai -->

        <!-- Hiển thị lỗi (nếu có) -->
        <TextView
            android:id="@+id/textPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#FFF2F2"
            android:padding="8dp"
            android:text="⚠ Mật khẩu không khớp!"
            android:textColor="#D32F2F"
            android:visibility="gone" />

        <!-- Nút đăng ký -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00B89F"
            android:text="Đăng ký"
            android:textColor="#FFFFFF" />

        <!-- Link đăng nhập -->
        <TextView
            android:id="@+id/textSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Đã có tài khoản? Đăng nhập"
            android:textColor="#00B89F" />

    </LinearLayout>
</ScrollView>
