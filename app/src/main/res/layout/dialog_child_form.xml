<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin về trẻ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/inputChildName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Tên trẻ"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/inputChildDob"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ngày sinh (dd/MM/yyyy)"
        android:inputType="date"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính:"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nam"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nữ"
            android:textSize="14sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Xóa"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_delete_background"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="20dp"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hủy"
            android:textColor="#666666"
            android:background="@drawable/button_cancel_background"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="20dp"
            android:textSize="14sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnSaveChild"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Lưu"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_save_background"
            android:paddingHorizontal="24dp"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>