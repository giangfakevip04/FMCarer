<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/bg_circle"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin@fmcarer.vn"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textProfileRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản chính"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa thông tin"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00B89F"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnManageSubusers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý tài khoản phụ"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#EEEEEE"
            android:textColor="#333333" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:layout_marginTop="32dp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
