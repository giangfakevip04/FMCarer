<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_schedule_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/childAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_circle"
        android:contentDescription="Trẻ"
        android:src="@drawable/satisfied_filled" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/childName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bé Ngọc Lan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

        <TextView
            android:id="@+id/timeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 - 10:00 (Ăn sáng)"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 giờ"
            android:textColor="#9CA3AF"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            android:contentDescription="Đã hoàn thành" />
    </LinearLayout>

</LinearLayout>