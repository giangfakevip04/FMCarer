<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="24dp"
            android:contentDescription="Logo ứng dụng" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/textSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập email của bạn"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/email"
            android:background="@drawable/bg_edittext_outline"
            android:padding="12dp" />

        <!-- Mật khẩu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập mật khẩu..."
            android:inputType="textPassword"
            android:drawableStart="@drawable/lock"
            android:drawableEnd="@drawable/eye"
            android:background="@drawable/bg_edittext_outline"
            android:padding="12dp" />

        <!-- Nút đăng nhập -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Đăng nhập"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00B89F"
            android:textColor="#FFFFFF" />

        <!-- Mạng xã hội -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:weightSum="3">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_social_btn"
                android:src="@drawable/facebook"
                android:contentDescription="Đăng nhập Facebook" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_social_btn"
                android:src="@drawable/googleg_disabled_color_18"
                android:contentDescription="Đăng nhập Google" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_social_btn"
                android:src="@drawable/instagram"
                android:contentDescription="Đăng nhập Instagram" />
        </LinearLayout>

        <!-- Link đăng ký / quên mật khẩu -->
        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản? Đăng ký"
            android:layout_marginTop="24dp"
            android:textColor="#00B89F" />

        <TextView
            android:id="@+id/textForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="#00B89F"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</ScrollView>
